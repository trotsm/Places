<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="400dp" />

            <ImageView
                android:id="@+id/img_detail_activity"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="4dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/coordinates_detail_activity"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:background="#00000000"
                android:clickable="true"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/ic_gomap" />

            <ImageButton
                android:layout_alignParentRight="true"
                android:id="@+id/readtext"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#00000000"
                android:clickable="true"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/ic_play_text" />
        </RelativeLayout>

        <TextView
            android:id="@+id/name_detail_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_detail_activity"
            android:layout_marginBottom="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Музей писанкового Розпису"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description_detail_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_detail_activity"
            android:paddingBottom="@dimen/fab_margin"
            android:paddingEnd="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Кохання – це щастя, доводить поет," />

    </LinearLayout>

</ScrollView>